        xmlns:local="clr-namespace:TestWorks.Ordering.WPFClient"
        mc:Ignorable="d"
        Title="WordsOrderingWindow" Height="378" Width="677">
    <Grid Height="361" VerticalAlignment="Top" IsEnabled="False">
        <Label Content="Insert a text and an operation to perform." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="657" Height="169"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,240,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="104" Width="657">
            <TextBlock.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
            </TextBlock.Background>
        </TextBlock>
        <Button Content="Analyze Input" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top" Width="99"/>
        <ComboBox HorizontalAlignment="Left" Margin="231,215,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
